@model GameShelf.Models.Game

@{
    ViewData["Title"] = "Add New Game";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>Add New Game</h1>
        <hr />

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter game title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Developer" class="form-label"></label>
                    <input asp-for="Developer" class="form-control" placeholder="Enter developer name" />
                    <span asp-validation-for="Developer" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Publisher" class="form-label"></label>
                    <input asp-for="Publisher" class="form-control" placeholder="Enter publisher name (optional)" />
                    <span asp-validation-for="Publisher" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ReleaseDate" class="form-label"></label>
                    <input asp-for="ReleaseDate" class="form-control" type="date" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="0.00" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Rating" class="form-label"></label>
                    <input asp-for="Rating" class="form-control" type="number" min="1" max="10" placeholder="1-10 (optional)" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="PurchaseDate" class="form-label"></label>
                    <input asp-for="PurchaseDate" class="form-control" type="date" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Platform" class="form-label"></label>
                    <select asp-for="PlatformId" class="form-select" asp-items="ViewBag.PlatformsId">
                        <option value="">-- Select Platform --</option>
                    </select>
                    <span asp-validation-for="PlatformId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Genre" class="form-label"></label>
                    <select asp-for="GenreId" class="form-select" asp-items="ViewBag.GenresId">
                        <option value="">-- Select Genre --</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter game description (optional)"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
                <label asp-for="IsCompleted" class="form-check-label"></label>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    Create Game
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
