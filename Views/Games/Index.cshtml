@model IEnumerable<GameShelf.Models.Game>

@{
    ViewData["Title"] = "My Games";
}

<div class="row mb-3">
    <div class="col">
        <h1> My Games</h1>
        <p>Manage your personal game collection</p>
    </div>
    <div class="col text-end">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            + Add New Game
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Developer</th>
                    <th>Platform</th>
                    <th>Genre</th>
                    <th>Release Date</th>
                    <th>Price</th>
                    <th>Rating</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    <tr>
                        <td><strong>@game.Title</strong></td>
                        <td>@game.Developer</td>
                        <td>
                            <span class="badge bg-info">@game.Platform?.Name</span>
                        </td>
                        <td>
                            <span class="badge bg-warning text-dark">@game.Genre?.Name</span>
                        </td>
                        <td>@game.ReleaseDate.ToString("MMM dd, yyyy")</td>
                        <td>@game.Price.ToString("C")</td>
                        <td>
                            @if (game.Rating.HasValue)
                            {
                                <span class="badge bg-success">⭐ @game.Rating/10</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (game.IsCompleted)
                            {
                                <span class="badge bg-success">✓ Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">In Progress</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@game.Id" class="btn btn-sm btn-info" title="Details">
                                    Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-sm btn-warning" title="Edit">
                                    Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-sm btn-danger" title="Delete">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-light">
        <strong>Total Games:</strong> @Model.Count()
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No games in your library yet!</h4>
        <p>Click the "Add New Game" button to start building your collection.</p>
    </div>
}
