@model IEnumerable<GameShelf.Models.Genre>

@{
    ViewData["Title"] = "Genres";
}

<div class="row mb-3">
    <div class="col">
        <h1>Game Genres</h1>
        <p>Manage your game genres</p>
    </div>
    <div class="col text-end">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            + Add New Genre
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var genre in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-header bg-warning text-dark">
                        <h5>@genre.Name</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(genre.Description))
                        {
                            <p class="text-muted">@genre.Description</p>
                        }
                        <p class="mb-0">
                            <span class="badge bg-primary">
                                @(genre.Games?.Count ?? 0) Game
                            </span>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-action="Details" asp-route-id="@genre.Id" class="btn btn-sm btn-warning">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No genres added yet!</h4>
        <p>Click the "Add New Genre" button to add your first game genre.</p>
    </div>
}
