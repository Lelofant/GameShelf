@model IEnumerable<GameShelf.Models.Game>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="display-4">My Game Library</h1>
        <p class="lead">Welcome to your personal gaming collection manager</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Games</h5>
                <p class="card-text display-4">@ViewBag.TotalGames</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Completed</h5>
                <p class="card-text display-4">@ViewBag.CompletedGames</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Platforms</h5>
                <p class="card-text display-4">@ViewBag.TotalPlatforms</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Genres</h5>
                <p class="card-text display-4">@ViewBag.TotalGenres</p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5>Games by Platform</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.GamesByPlatform != null && ViewBag.GamesByPlatform.Count > 0)
                {
                    <ul class="list-group">
                        @foreach (var item in ViewBag.GamesByPlatform)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.Platform
                                <span class="badge bg-primary rounded-pill">@item.Count</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No games added yet.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5>Games by Genre</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.GamesByGenre != null && ViewBag.GamesByGenre.Count > 0)
                {
                    <ul class="list-group">
                        @foreach (var item in ViewBag.GamesByGenre)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.Genre
                                <span class="badge bg-warning rounded-pill text-dark">@item.Count</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No games added yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recently Added Games</h5>
                <a asp-controller="Games" asp-action="Index" class="btn btn-sm btn-light">View All</a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3">
                        @foreach (var game in Model)
                        {
                            <div class="col">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">@game.Title</h6>
                                        <p class="card-text small text-muted mb-1">
                                            <strong>Platform:</strong> @game.Platform?.Name<br />
                                            <strong>Genre:</strong> @game.Genre?.Name
                                        </p>
                                        @if (game.Rating.HasValue)
                                        {
                                            <p class="card-text small">
                                                <span class="badge bg-success">⭐ @game.Rating/10</span>
                                            </p>
                                        }
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" class="btn btn-sm btn-outline-primary w-100">Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <h5>No games in your library yet!</h5>
                        <p>Start building your collection by adding your first game.</p>
                        <a asp-controller="Games" asp-action="Create" class="btn btn-primary">Add Your First Game</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h5 class="card-title">Quick Actions</h5>
                <a asp-controller="Games" asp-action="Create" class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-plus-circle"></i> Add New Game
                </a>
                <a asp-controller="Platforms" asp-action="Create" class="btn btn-info btn-lg me-2">
                    <i class="bi bi-plus-circle"></i> Add Platform
                </a>
                <a asp-controller="Genres" asp-action="Create" class="btn btn-warning btn-lg">
                    <i class="bi bi-plus-circle"></i> Add Genre
                </a>
            </div>
        </div>
    </div>
</div>
